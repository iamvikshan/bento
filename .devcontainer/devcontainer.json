{
  "name": "Ubuntu + Bun",
  "image": "vikshan/ubuntu-bun:latest",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {
      "installDirectlyFromGitHubRelease": true,
      "version": "latest"
    }
  },
  // Configure tool-specific properties.
  "customizations": {
    "vscode": {
      "extensions": ["dbaeumer.vscode-eslint", "GitHub.copilot", "esbenp.prettier-vscode", "eamodio.gitlens", "oven.bun-vscode"]
    }
  },

  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": "bun install && chmod +x scripts/iamvikshan.sh && ./scripts/iamvikshan.sh",

  // Set `remoteUser` to `root` to connect as root.
  "remoteUser": "root"
}
